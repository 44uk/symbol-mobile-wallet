.itemContainer {
    flex-direction: row;
    justify-content: space-between;
    padding: 7px 0;
	align-items: center;
}

.itemTitle {
    flex-direction: row;
}

.itemIcon {
    height: 20px;
    width: 20px;
    align-self: center;
	opacity: 0.8;
}

.itemTitleText {
    align-self: center;
    font-size: 15px;
    font-weight: 300;
    color: #fff;
}

.value {
    padding-right: 14px;
    font-weight: 700;
}

.icon {
    padding-right: 16px;
}

.switch {
    margin-right: 16px;
}

.dropDownSelector {
    flex-direction: row;
    align-items: center;
}

.dropDownSelectorText {
    font-size: 12px;
    color: #ffffff;
    padding-right: 8px;
	font-family: NotoSans-Light;
    //text-transform: uppercase;
}

.dropDownSelectorIcon {
    height: 14px;
    width: 14px;
}