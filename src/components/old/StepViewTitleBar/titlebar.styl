.titleBarContainer {
  padding: 10px;
  padding-top: 0;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.iconContainer {
  position: absolute;
  top: -8px;
  bottom: 0px;
  padding: 4px 0px;
  z-index: 1;
}

.leftIconContainer {
  @extend .iconContainer;
  left: 0;
}

.rightIconContainer {
  @extend .iconContainer;
  right: 0;
}

.icon {
  width: 16px;
  margin: auto;
}

.title {
  font-weight: 500;
  font-size: 20px;
}

.titleAlignLeft {
	font-size: 16px;
	margin-top: 1px;
}