.rootContainer {
    flex: 1;
}

.topContainer {
    flex: 0.75;
    flex-direction: row;
    align-items: center;
}

.bottomContainer {
    flex: 0.25;
    padding: 16px;
    align-items: center;
    justify-content: center;
}

.contentContainer {
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 8px;
    margin-top: 8px;
}

.activityContainer {
    align-items: center;
    margin-top: 16px;
    margin-bottom: 16px;
    padding: 16px;
    width: 240px;
    height: 240px;
}

.loader {
    margin-top: 60px;
    width: 124px;
    height: 16px;
}

.textContent {
    color: #ffffff;
    font-size: 12;
    margin-top: 16px;
    margin-bottom: 16px;
    opacity: 0.5;
    text-align: center;
    line-height: 22px;
}

.qr {
    margin-top: 16px;
    margin-bottom: 16px;
    padding: 16px;
    width: 240px;
    height: 240px;
}

.button {
    margin-top: 16px;
    margin-bottom: 8px;
    width: 100%;
}

.linkButton {
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding-top: 10px;
    padding-bottom: 10px;
}

.linkButtonText {
    color: #5200c7;
    text-transform: uppercase;
    font-size: 10px;
    font-weight: 600;
}

.buttonRightIcon {
    width: 12px;
    height: 12px;
    margin-left: 8px;
}