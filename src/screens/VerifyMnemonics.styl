.gradientContainer {
  flex: 1;
  align-items: center;
  background-color: #213349;
  flex-direction: column;
}

.contentContainer {
  align-items: center;
  padding: 20px;
  width: 100%;
  flex: 1;
}

.headerContainer {
  align-items: center;
  justify-content: center;
  padding-top: 20px;
  padding-bottom: 20px;
  width: 100%;
  height: 56px;
}

.textHeader {
  color: #fff;
  font-weight: 600;
  font-size: 16;
}

.textContent {
  color: #f3f4f8;
  font-size: 12;
  padding-bottom: 15px;
  opacity: 0.6;
  line-height: 22px;
}

.buttonContainer {
  align-items: center;
  justify-content: center;
  width: 100%;
  flex: 1;
}

.orderedMnemonicsCard {
  width: 100%;
  flex-direction: column;
  justify-content: space-between;
  min-height: 160px;
  padding: 16px;
}

.orderedMnemonics {
  align-items: center;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-evenly;
}

.unorderedMnemonics {
  align-items: flex-start;
  flex-wrap: wrap;
  flex-direction: row;
  padding-top: 20px;
  justify-content: space-evenly;
  margin: 0px 5px;
  padding-bottom: 15px;
}

.unorderedChip {
  background-color: #ff00ff;
  border-radius: 8px;
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 10px;
  padding-right: 10px;
  display: flex;
  margin: 5px;
}

.orderedChip {
  border-radius: 8px;
  padding: 3px 5px;
  display: flex;
  margin: 1px;
}

.orderedChipText {
  color: #000000;
  font-size: 18px;
}

.unorderedChipText {
  color: #ffffff;
}

.checkboxContainer {
  flex: 1;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 10px;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.checkbox {
  flex: 1;
}

.checkableText {
  color: #ffffff;
  opacity: 0.5;
}

.error {
  text-align: center;
  padding: 2px 5px;
  color: #E8195F;
  font-size: 11px;
}

.success {
  color: #26B4B0;
  text-align: center;
  padding: 2px 5px;
  font-size: 11px;
}

.orderedMnemonicsContent {
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
}